<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="500dp"
    android:minHeight="400dp"
    android:background="#e1e0d7"
    android:gravity="center_horizontal">


    <TextView
        android:id="@+id/kerdisate"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/finalscore"
        android:text="500"
        android:textSize="30dp"
        android:textColor="#7e4881"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/lires12"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/goagain"
        android:text="ΠΑΜΕ ΞΑΝΑ!"
        android:textSize="30dp"
        android:background="@drawable/mybuttonblue"
        android:textColor="#fff"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/goback"
        android:text="ΠΙΣΩ"
        android:textSize="30dp"
        android:background="@drawable/mybuttonred"
        android:textColor="#fff"/>

</LinearLayout>