<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e0d7">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <ImageButton
        android:id="@+id/backbutton"
        android:adjustViewBounds="true"
        android:src="@drawable/back"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#e1e0d7"
        />
    <TextView
        android:id="@+id/finalscore"
        android:text="500"
        android:textSize="30dp"
        android:textColor="#7e4881"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6.6"
        android:gravity="center"
        />
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">
        <TextView
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:id="@+id/scoremain2"
            android:text=""
            android:textSize="20dp"
            android:layout_width="0dp"
            />
        <TextView
            android:gravity="right"
            android:layout_weight="2"
            android:id="@+id/thesigamwta"
            android:text=""
            android:textSize="28dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:gravity="right"
            android:layout_weight="0.2"
            android:id="@+id/scoregsdaadsamwta"
            android:text=""
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">
            <TextView
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:id="@+id/scoremain22"
                android:text=""
                android:textSize="20dp"
                android:layout_width="0dp"
                />
            <TextView
                android:gravity="right"
                android:layout_weight="2"
                android:id="@+id/scoremain44"
                android:text=""
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />

            <TextView
                android:gravity="right"
                android:layout_weight="0.2"
                android:id="@+id/scoremain88"
                android:text=""
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/today"
            android:text="ΣΗΜΕΡΑ"
            android:textSize="10dp"
            android:background="@drawable/specialbutton"
            android:textColor="#ffffff"
            android:state_pressed="false"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/weekly"
            android:text="ΕΒΔΟΜΑΔΙΑΙΑ"
            android:textSize="10dp"
            android:background="@drawable/mybuttonblue"
            android:textColor="#ffffff"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/alltime"
            android:text="ΓΕΝΙΚΑ"
            android:textSize="10dp"
            android:background="@drawable/mybuttonblue"
            android:textColor="#ffffff"/>
        <TextView
            android:gravity="right"
            android:layout_weight="1.5"
            android:text=""
            android:textSize="28dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <TextView
        android:gravity="right"
        android:layout_weight="0.1"
        android:text=""
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         />

      <LinearLayout
          android:background="#e1ddd1"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="3">
          <TextView
              android:gravity="right"
              android:layout_weight="0.2"
              android:text=""
              android:textSize="28dp"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              />
    <ListView
        android:background="#e1ddd1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:id="@+id/listView"
        android:layout_gravity="center_horizontal"
        android:divider="#d8d4c9"
        android:dividerHeight="2dp"
        android:textColor="#ffffff"
        />

          <TextView
              android:gravity="right"
              android:layout_weight="0.2"
              android:text=""
              android:textSize="28dp"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              />
        </LinearLayout>

    <TextView
        android:gravity="right"
        android:layout_weight="0.1"
        android:text=""
        android:textSize="28dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
</LinearLayout>