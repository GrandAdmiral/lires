<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:minWidth="500dp"
    android:minHeight="400dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="#e1e0d7"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">
    <TextView
        android:id="@+id/pub"
        android:textSize="30dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        />
    </RelativeLayout>
     <RelativeLayout
        android:paddingLeft="21dp"
         android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
         android:layout_weight="1"
        >
         <TextView
             android:id="@+id/firstscore"
             android:text="14%"
             android:textStyle="bold"
             android:textSize="10dp"
             android:layout_width="30dp"
             android:gravity="center"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_alignParentLeft="true"
             />
         <TextView
             android:id="@+id/firstwords"
             android:text="A"
             android:textStyle="bold"
             android:textSize="10dp"
             android:layout_width="30dp"
             android:gravity="center"
             android:layout_height="wrap_content"
             android:layout_above="@id/firstscore"
             android:layout_alignParentLeft="true"
             />
        <TextView
            android:id="@+id/firstbar"
            android:background="#62b41b"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_above="@id/firstwords"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="2dp"
            />
         <TextView
             android:id="@+id/secondscore"
             android:text="14%"
             android:textSize="10dp"
             android:textStyle="bold"
             android:layout_alignParentBottom="true"
             android:gravity="center"
             android:layout_toRightOf="@id/firstwords"
             android:layout_marginLeft="10dp"
             android:layout_width="30dp"
             android:layout_height="wrap_content"
             />

         <TextView
            android:id="@+id/secondwords"
            android:text="B"
            android:textSize="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_toRightOf="@id/firstwords"
            android:layout_above="@id/secondscore"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            />
         <TextView
            android:id="@+id/secondbar"
            android:background="#1a86d9"
            android:layout_above="@id/secondwords"
            android:layout_toRightOf="@id/firstbar"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_marginBottom="2dp"
            />
         <TextView
             android:id="@+id/thirdscore"
             android:text="14%"
             android:textStyle="bold"
             android:layout_alignParentBottom="true"
             android:layout_toRightOf="@id/secondwords"
             android:layout_marginLeft="10dp"
             android:gravity="center"
             android:textSize="10dp"
             android:layout_width="30dp"
             android:layout_height="wrap_content"
             />
        <TextView
            android:id="@+id/thirdwords"
            android:text="Γ"
            android:textStyle="bold"
            android:layout_above="@id/thirdscore"
            android:layout_toRightOf="@id/secondwords"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/thirdbar"
            android:background="#d8361c"
            android:layout_toRightOf="@id/secondbar"
            android:layout_above="@id/thirdwords"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_marginBottom="2dp"
            />
         <TextView
             android:id="@+id/fourthscore"
             android:text="14%"
             android:gravity="center"
             android:textStyle="bold"
             android:layout_alignParentBottom="true"
             android:layout_toRightOf="@id/thirdwords"
             android:layout_marginLeft="10dp"
             android:textSize="10dp"
             android:layout_width="30dp"
             android:layout_height="wrap_content"
             />
        <TextView
            android:id="@+id/fourthwords"
            android:text="Δ"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_above="@id/fourthscore"
            android:layout_toRightOf="@id/thirdwords"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
             />
        <TextView
        android:id="@+id/fourthbar"
        android:background="#f8870c"
        android:layout_above="@id/fourthwords"
        android:layout_toRightOf="@id/thirdbar"
        android:layout_marginLeft="10dp"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_marginBottom="2dp"
        />
    </RelativeLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="0.2"></LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:id="@+id/exitpub"
        android:text="ΕΝΤΑΞΕΙ"
        android:textSize="30dp"
        android:background="@drawable/mybuttonpurple"
        android:textColor="#fff"/>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="0.1"></LinearLayout>

</LinearLayout>
<LinearLayout
    android:background="#e1e0d7"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="0.2"></LinearLayout>
</LinearLayout>