<android.support.v4.widget.SlidingPaneLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sp" >
    <!-- Left side pane. (Master) -->
    <fragment android:id="@+id/leftpane"
        android:name="com.example.jimmy.test.GameFragment"
        android:layout_width="190dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_weight="200"/>

    <!-- Right side page. (Slave)  -->
    <fragment android:id="@+id/rightpane"
        android:name="com.example.jimmy.test.SlidingShit"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="0"
        />

</android.support.v4.widget.SlidingPaneLayout>
