<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e1e0d7"
    android:gravity="center_horizontal">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.1">
    <TextView
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:id="@+id/scoremain1"
        android:text=""
        android:textSize="28dp"
        android:layout_width="wrap_content"
        />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_weight="0.5"
        android:id="@+id/scoremain"
        android:text=""
        android:textSize="28dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:id="@+id/scoremain222"
            android:text=""
            android:textSize="20dp"
            android:layout_width="0dp"
            />
        <TextView
            android:gravity="right"
            android:layout_weight="2"
            android:id="@+id/scoremain444"
            android:text=""
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:gravity="right"
            android:layout_weight="0.2"
            android:id="@+id/scoremain888"
            android:text=""
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:id="@+id/scoremain2"
            android:text=""
            android:textSize="20dp"
            android:layout_width="0dp"
            />
        <TextView
            android:gravity="right"
            android:layout_weight="2"
            android:id="@+id/scoremain4"
            android:text=""
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:gravity="right"
            android:layout_weight="0.2"
            android:id="@+id/scoremain8"
            android:text=""
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal">
    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/lires"
        android:text="lires"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"></LinearLayout>
        <Button
        android:id="@+id/pame"
        android:layout_centerInParent="true"
        android:textSize="35dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybuttongreen"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.9"
        android:radius="10dp"
        />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"></LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                </LinearLayout>
            <ImageButton
                android:id="@+id/gotoscore"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/score"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#e1e0d7"
                />
            <ImageButton
                android:id="@+id/gotofeedback"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/feedback"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#e1e0d7"
                />
            <ImageButton
                android:id="@+id/gotosettings"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/settings"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#e1e0d7"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">
            </LinearLayout>



            </LinearLayout>


<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="2"></RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            >
        </LinearLayout>
        <ImageButton
            android:id="@+id/togglesound"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/music"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#e1e0d7"
            />
        <ImageButton
            android:id="@+id/togglesync"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/sync"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#e1e0d7"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            >
        </LinearLayout>


    </LinearLayout>


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="0.2"></LinearLayout>

</LinearLayout>
