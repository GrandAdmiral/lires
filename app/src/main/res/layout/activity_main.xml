<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e1e0d7"
    android:gravity="center_horizontal">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.6">
    <TextView
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:id="@+id/scoremain1"
        android:text=""
        android:textSize="28dp"
        android:layout_width="wrap_content"
        />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_weight="0.5"
        android:id="@+id/scoremain"
        android:text=""
        android:textSize="28dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:id="@+id/scoremain2"
            android:text=""
            android:textSize="20dp"
            android:layout_width="0dp"
            />
        <TextView
            android:gravity="right"
            android:layout_weight="2"
            android:id="@+id/scoremain4"
            android:text=""
            android:textSize="28dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:gravity="right"
            android:layout_weight="0.2"
            android:id="@+id/scoremain8"
            android:text=""
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">
        <TextView
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:id="@+id/spacing2"
            android:text=""
            android:textSize="28dp"
            android:layout_width="wrap_content"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_weight="0.5"
            android:id="@+id/spacing"
            android:text=""
            android:textSize="28dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_horizontal">
    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/lires"
        android:text="lires"
        android:textSize="67dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
    <Button
        android:id="@+id/pame"
        android:layout_centerInParent="true"
        android:textSize="35dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybuttongreen"
        android:layout_width="350dp"
        android:layout_height="50dp"

        android:radius="10dp"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        >
    <Button
        android:layout_centerInParent="true"
        android:id="@+id/skor"
        android:textSize="35dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybuttonblue"
        android:layout_marginTop="15dp"
        />
</RelativeLayout>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1.75"></RelativeLayout>
</LinearLayout>
