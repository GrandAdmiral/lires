<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e1e0d7"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7">

        <ImageButton
            android:id="@+id/backbuttonsug"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/back"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#e1e0d7"
            />
        <TextView
            android:id="@+id/suggestionslabel"
            android:text="500"
            android:textSize="30dp"
            android:textColor="#7e4881"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.6"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4.8">
        <EditText
            android:layout_centerInParent="true"
            android:id="@+id/editsuggestion"
            android:background="#ffffff"
            android:gravity="center"
            android:text=""
            android:textSize="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"></RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.4"
            >
        </LinearLayout>
        <Button
            android:id="@+id/pushsuggestion"
            android:text="ΚΑΤΑΧΩΡΗΣΗ"
            android:layout_centerInParent="true"
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:background="@drawable/mybuttongreen"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.4"
            >
            </LinearLayout>

    </LinearLayout>






    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>
</LinearLayout>
